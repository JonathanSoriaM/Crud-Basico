html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport',content='width=devide-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible',content='ie=edge')
        link(rel='stylesheet',type='text/css',href='semantic/dist/semantic.min.css')
        link(rel='stylesheet',type='text/css',href='css/dataTables.semanticui.min.css')
        link(rel='stylesheet',type='text/css',href='css/responsive.semanticui.min.css')
        link(rel='stylesheet',type='text/css',href='css/jquery.dataTables.css')
        script(src='js/jquery-3.3.1.js')
        script(src='semantic/dist/semantic.js')
        script(src='js/jquery.dataTables.js')
        script(src="../../js/socket.io.dev.js")
        script(src='js/dataTables.semanticui.min.js')
        script(src='js/dataTables.responsive.min.js')
        script.
            $(document).ready(function(){
                $('.table').DataTable({
                    destroy:true
                })
            })

    body
        .ui.segment.container
            .ui.form.content.equal.width.sucess
                .fields
                    .field
                        label Nombre
                        input.nombre(type='text')
                .fields
                    .field
                        label Codigo
                        input.codigo(type='text')
                    .field
                        label Cantidad
                        input.cantidad(type='number')

                .fields
                    .field
                        label Provedor
                        input.provedor(type='text')
                    .field
                        label Costo
                        input.costo(type='number')
                    .field
                        label Venta
                        input.venta(type='number')
                .fields
                    .fild
                        button.ui.button.basic.primary.guardar Guardar
        .ui.segment.container
            table.ui.table.celled.selectable.nowrap.display(style='width:100%;')
                thead
                    tr
                        th Codigo
                        th Cantidad
                        th Nombre
                        th Costo
                        th Venta
                        th Opciones
                tbody
        .ui.modal.edicion
            .header Edicion de Inventario
            .content
                .description
                    .ui.form.equal.width.edition
                        small.idproducto(hidden)
                        .fields
                            .field
                                label Nombre
                                input.nombre(type='text')
                            .field
                                label Cantidad
                                input.cantidad(type='number')
                        .fields
                            .field
                                label Costo
                                input.costo(type="number")
                            .field
                                label Venta
                                input.venta(type="number")

            .actions
                .ui.editar.approve.button.yellow Editar
                .ui.cancel.button.negative Cancelar
        script(src='https://cdn.jsdelivr.net/npm/sweetalert2@9')
        script(src='https://unpkg.com/axios/dist/axios.min.js')
        
        script(src='js/crud.js')
